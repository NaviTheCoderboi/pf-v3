{
    "extends": "astro/tsconfigs/strictest",
    "plugins": [
        {
            "name": "@astrojs/ts-plugin"
        }
    ],
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@assets/*": ["./src/assets/*"],
            "@components/*": ["./src/components/*"],
            "@layouts/*": ["./src/layouts/*"],
            "@lib/*": ["./src/lib/*"],
            "@styles/*": ["./src/styles/*"]
        },
        "allowJs": true
    }
}
