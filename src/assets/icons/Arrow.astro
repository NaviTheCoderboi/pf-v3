---
interface Props {
    direction: "left" | "right" | "up" | "down";
    class: string;
}

const { direction, class: className } = Astro.props;
---

<svg
    xmlns="http://www.w3.org/2000/svg"
    fill="none"
    viewBox="0 0 24 24"
    stroke-width="1.5"
    stroke="currentColor"
    style={`transform: rotate(${direction === "left" ? "0deg" : direction === "up" ? "90deg" : direction === "down" ? "-90deg" : "180deg"});`}
    class={className}
>
    <path
        stroke-linecap="round"
        stroke-linejoin="round"
        d="M15.75 19.5 8.25 12l7.5-7.5"></path>
</svg>
