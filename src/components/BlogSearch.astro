---
import Search from "@assets/icons/Search.astro";
import Kbd from "./Kbd.astro";
---

<dialog id="blog__search" class="backdrop:bg-black/40">
    <div
        class="h-screen lg:h-fit fixed top-0 left-0 left-1/2 lg:top-1/5 -translate-x-1/2 w-[100vw] max-w-xl border-1 border-zinc-700 rounded-sm text-zinc-200 bg-zinc-800"
    >
        <div
            class="p-4 pb-0 flex justify-center items-center gap-5 w-full bg-slate-900"
        >
            <div
                class="flex justify-center items-center gap-2 w-full border-accent-500 border-1 rounded-sm p-2"
            >
                <Search class="size-8 text-accent-500" />
                <input
                    type="text"
                    class="w-full outline-none border-none text-xl font-light"
                    placeholder="Search blog..."
                />
            </div>
            <button
                class="lg:hidden p-1 text-accent-500 text-lg font-light"
                id="blog__search__close">Cancel</button
            >
        </div>
        <div class="flex justify-center items-center gap-4 bg-slate-900">
            <span class="text-zinc-300 text-sm py-8">No results</span>
        </div>
        <ul
            class="hidden shrink-0 lg:flex items-center gap-4 p-4 border-t-zinc-700 border-t-1 text-xs text-zinc-300 bg-zinc-800"
        >
            <li class="flex justify-center items-center gap-2">
                <Kbd>
                    <svg role="img" class="size-4"
                        ><g
                            fill="none"
                            stroke="currentColor"
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="1.2"
                            ><path
                                d="M12 3.53088v3c0 1-1 2-2 2H4M7 11.53088l-3-3 3-3"
                            ></path></g
                        ></svg
                    >
                </Kbd>
                to select
            </li>
            <li class="flex justify-center items-center gap-2">
                <Kbd>
                    <svg class="size-4" role="img"
                        ><g
                            fill="none"
                            stroke="currentColor"
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="1.2"
                            ><path d="M7.5 3.5v8M10.5 8.5l-3 3-3-3"></path></g
                        ></svg
                    >
                </Kbd>
                <Kbd>
                    <svg class="size-4" role="img"
                        ><g
                            fill="none"
                            stroke="currentColor"
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="1.2"
                            ><path d="M7.5 11.5v-8M10.5 6.5l-3-3-3 3"></path></g
                        ></svg
                    >
                </Kbd>
                to navigate
            </li>
            <li class="flex justify-center items-center gap-2">
                <Kbd>
                    <svg class="size-4" role="img"
                        ><g
                            fill="none"
                            stroke="currentColor"
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="1.2"
                            ><path
                                d="M13.6167 8.936c-.1065.3583-.6883.962-1.4875.962-.7993 0-1.653-.9165-1.653-2.1258v-.5678c0-1.2548.7896-2.1016 1.653-2.1016.8634 0 1.3601.4778 1.4875 1.0724M9 6c-.1352-.4735-.7506-.9219-1.46-.8972-.7092.0246-1.344.57-1.344 1.2166s.4198.8812 1.3445.9805C8.465 7.3992 8.968 7.9337 9 8.5c.032.5663-.454 1.398-1.4595 1.398C6.6593 9.898 6 9 5.963 8.4851m-1.4748.5368c-.2635.5941-.8099.876-1.5443.876s-1.7073-.6248-1.7073-2.204v-.4603c0-1.0416.721-2.131 1.7073-2.131.9864 0 1.6425 1.031 1.5443 2.2492h-2.956"
                            ></path></g
                        ></svg
                    >
                </Kbd>
                to close
            </li>
        </ul>
    </div>
</dialog>
