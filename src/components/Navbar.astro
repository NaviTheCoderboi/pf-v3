---
import Github from "@assets/icons/Github.astro";
import Logo from "@assets/logo.png";
import { Image } from "astro:assets";

const links = {
    Home: "/",
    About: "/#about",
    Projects: "/#projects",
    Blog: "/blog"
} as const;
---

<nav class="w-full px-6 py-3 fixed top-0 left-0 z-50">
    <div
        class="mx-auto w-3/5 h-full grid place-content-between grid-rows-1 grid-cols-3 px-4 py-2 rounded-full backdrop-filter backdrop-blur-sm bg-zinc-800/30"
    >
        <a href="/">
            <Image src={Logo} alt="navithecoderboi" class="size-20" />
        </a>
        <ul class="flex justify-end items-center gap-2">
            {
                Object.entries(links).map(([k, v]) => (
                    <li class="group relative text-lg font-semibold text-zinc-400 hover:text-zinc-300 duration-300 rounded-full px-4 py-2">
                        <a href={v}>{k}</a>
                        <div class="scale-x-0 group-hover:scale-x-100 absolute inset-x-0 w-full mx-auto -bottom-px bg-gradient-to-r from-transparent via-secondary-500 to-transparent h-px duration-300" />
                    </li>
                ))
            }
        </ul>
        <a
            href="https://github.com/navithecoderboi"
            class="flex items-center justify-end"
            target="_blank"
            rel="noopener noreferrer"
        >
            <Github
                size="lg"
                class="text-zinc-400 hover:text-zinc-200 duration-300"
            />
        </a>
    </div>
</nav>

<style scoped>
    nav {
        animation: drop 0.5s 0.2s ease;
    }

    @keyframes drop {
        from {
            transform: translateY(-100%);
        }
        to {
            transform: translateY(0);
        }
    }
</style>
