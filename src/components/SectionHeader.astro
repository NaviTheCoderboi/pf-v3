---
interface Props {
    title: string;
    serial: number;
}

const { title, serial } = Astro.props;
---

<div
    class="flex flex-row items-center md:px-0 w-full"
    data-motion="fade slide"
    data-motion-easing="cubic-bezier(0.25, 0.1, 0.25, 1)"
    data-motion-fade-easing="ease-out"
    data-motion-slide-from-y="-50px"
    data-motion-duration="400"
>
    <svg
        xmlns="http://www.w3.org/2000/svg"
        class="flex-none h-5 md:h-6 w-5 md:w-5 translate-y-[2px] text-secondary-400"
        viewBox="0 0 20 20"
        fill="currentColor"
        role="img"
        ><path
            fill-rule="evenodd"
            d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z"
            clip-rule="evenodd"></path></svg
    ><div class="flex-none flex-row space-x-2 items-center pr-2">
        <span class="text-secondary-400 text-sm sm:text-xl">
            0{serial}.</span
        ><span
            class="font-bold tracking-wider text-gray-200 text-lg md:text-2xl w-44 md:w-56 opacity-85"
        >
            {title}</span
        >
    </div><div class="bg-gray-400 h-[0.2px] w-full xl:w-1/3 md:w-1/2"></div>
</div>
